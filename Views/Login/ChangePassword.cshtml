@model ForumProject.Models.UsersModel

@{
    ViewData["Title"] = "ChangePassword";
}
<style>
    .conneKtForum {
        position: absolute;
        width: 180px;
        height: 29px;
        top: 24px;
        left: 74px;
        font-family: 'Garamond';
        font-weight: 700;
        font-size: 25px;
        line-height: 29px;
        text-align: center;
        color: #000000;
    }

    .loginPage{
        box-sizing: border-box;
        position: relative;
        background: #B8BAEC;
        margin: auto;
    }
    
    .logBox {
        position: absolute;
        width: 442.76px;
        height: 377px;
        top: 122px;
        left: 35%;
        background: #D9D9D9;
        border-radius: 27px;
        transform: rotate(-0.05deg);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 30px;
        display: flex;
        justify-content: flex-start;
    }

    .logintoyourAccount {
        text-align: center;
        font-family: 'Garamond';
        font-weight: 800;
        font-size: 24px;
        line-height: 26px;
        color: #2D0F6A;
        margin-left: 28px;
    }

    .control-label {
        font-family: 'Garamond';
        font-weight: 500;
        font-size: 22px;
        line-height: 26px;
        color: #2D0F6A;
    }

    .form-control {
        width: 100%;
        height: 43px;
        background: #EFEDED;
        border-radius: 13px;
        margin-bottom: 20px;
    }

    .loginButton {
        width: 112px;
        height: 35px;
        background: #531D97;
        border-radius: 25px;
        color: aliceblue;
        font-family: 'Times New Roman', Times, serif;
        font-size: 18px;
        margin-top: 20px;
        margin-left: 35%;
        align-self: center;
    }

    .register {
        font-family: 'Garamond';
        font-style: italic;
        font-weight: 600;
        font-size: 22px;
        line-height: 29px;
        color: paleturquoise;
        align-self: center;
    }

    .logo {
        position: absolute;
        width: 74px;
        height: 69px;
        left: 0;
        top: 0;
    }
</style>
<body class="loginPage">
    <img src="~/css/logo.png" class="logo" />
    <p class="conneKtForum">ConneKt Forum</p>

    <br />
    <br />
    <br />
    <div class="">
        <form asp-action="ChangePassword" class="logBox">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            @Html.LabelFor(m => m.securityQn, new { @class = "control-label" })
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.securityQn, new SelectList(
                new List<SelectListItem>
                {
                new SelectListItem { Text = "What is your nickname?", Value = "motherMaidenName" },
                new SelectListItem { Text = "What is your favorite color?", Value = "favoriteColor" },
                new SelectListItem { Text = "What is the name of your first pet?", Value = "firstPetName" }
                }, "Value", "Text"), "Select a security question", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.securityQn, "", new { @class = "text-danger" })
                </div>
            <div class="form-group">
                <label asp-for="securityAns" class="control-label"></label>
                <input asp-for="securityAns" class="form-control" />
                <span asp-validation-for="securityAns" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
