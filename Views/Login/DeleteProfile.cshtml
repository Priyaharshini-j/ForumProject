@model ForumProject.Models.UsersModel
@inject IHttpContextAccessor Context;
@{
    ViewData["Title"] = "DeleteProfile";
}

<style>
    .deletePage {
        background-color: #C5CAE9;
        box-sizing: border-box;
        position: relative;
        margin: auto;
        font-family:'Times New Roman', Times, serif;
    }
    .ErrorMessage{
        top:74px;
    }

    .navbar {
        width: calc(100% - 240px);
        height: 69px;
        top: 0px;
        margin: 0 auto; /* Center the navbar horizontally */
        position: absolute;
        left: 216px;
        float: right;
        border: solid 0.25mm;
    }

        .navbar a {
            margin-top: -8px;
            float: right;
            margin-right: 10px;
            margin-left: -130px;
            padding: 12px;
            font-size: 20px;
            color: #000;
            text-decoration: none;
            border-radius: 5px;
            font-weight:500;

        }

            .navbar a:Hover {
                background-color: #DEDEDE;
                color: black;
            }

        .navbar span {
            float: right;
            margin-right: 10px;
            padding: 20px;
            font-size: 18px;
            margin-top: -8px;
            color: #000;
            text-decoration: none;
        }
    .conneKtForum {
        position: absolute;
        width: 200px;
        height: 29px;
        top: 18px;
        left: -198px;
        font-family: 'Garamond';
        font-weight: 700;
        font-size: 27px;
        line-height: 29px;
        text-align: left;
        color: #000;
    }
    .deleteBox{
        position: absolute;
        width: 472.76px;
        height: fit-content;
        top: 122px;
        left: 35%;
        background: #E0E0E0;
        border-radius: 27px;
        transform: rotate(-0.05deg);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 30px;
        display: flex;
        justify-content: flex-start;
    }

    .details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        font-size:18px;
    }

    dt {
        font-weight: bold;
        margin-bottom: 5px;
        float:left;
    }

    dd {
        margin: 0;
    }
    .alert-hidden{
        display:none;
    }
</style>

<body class="deletePage">
    <div class="navbar">
        <p class="conneKtForum">ConneKt Forum</p>
        <span></span><span>Hi! @Context.HttpContext.Session.GetString("UserName")</span>
        <a href="@Url.Action("ForumList", "User")">Forums</a>
        <a class="polls">Polls</a>
        <a class="contactUs">Contact Us</a>
        <a asp-action="Login" asp-controller="Login" class="LogOut">Log Out</a>
    </div>
   
    <div class="deleteBox">
        <em style="font-weight:600; text-align:center ; font-family:Garamond; font-size: 23px;">Are you sure you want to delete this profile?</em>
        <br />
        
            @if(ViewBag != null)
            {
            <p class="alert alert-danger" role="alert">
                @ViewBag.Message
            </p>
            }
            else{
                <p class="alert-hidden"></p>
            }
        
        <br />
        <dl class="details">
            
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.securityQn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.securityQn)
            </dd>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.securityAns)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.securityAns)
            </dd>
        </dl>
        <form asp-action="DeleteProfile" asp-controller="Login">
            <input type="submit" value="Delete" class="btn btn-danger btn-outline-warning" style="margin-left:27%; margin-right:5%;"/>
            @{
                int userId = Context.HttpContext.Session.GetInt32("UserId") ?? 0;
            }
            <a class="btn  btn-info btn-outline-dark" href="@Url.Action("EditProfile","Login", new {Id = userId})">Edit Profile</a>
        </form>
    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}