@model IEnumerable<ForumProject.Models.ForumModel>
@inject IHttpContextAccessor Context;
@{
    ViewData["Title"] = "ForumList";
}

<style>
    /* Set default font family and size */
    body {
        font-family: Garamond, sans-serif;
        font-size: 20px;
    }

    /* Set background color and size for the main container */
    .discussionList {
        width: 1440px;
        height: 1024px;
        background-color: #FFFFFF;
    }

    /* Style the navigation bar */
    .navbar {
        width: calc(100% - 216px);
        height: 69px;
        top: 0px;
        margin: 0 auto; /* Center the navbar horizontally */
        background-color: #78BABE;
        position: absolute;
        left: 216px;
        float: right;
    }
        /* Align links to the right corner of navbar */
        .navbar a {
            margin-top:-2px;
            float: right;
            margin-right: 10px;
            margin-left: -130px;
            padding: 12px;
            font-size: 18px;
            color: #000000;
            text-decoration: none;
            border-radius:5px;
            font-size:22px;
        }

        .navbar a:Hover{
                background-color: #558386;
                color: #ffffff;
        }

    /* Style the logo image */
    .logo {
        width: 64px;
        height: 60px;
        margin-top: 5px;
        margin-left: 10px;
        display: inline-block;
    }

    /* Style the ConneKt heading */
    .ConneKt {
        font-size: 28px;
        font-weight: bold;
        color: #000000;
        text-align: center;
        margin-top: 20px;
        display: inline-block;
        font-family: Garamond;
    }

    /* Style the rectangle containing links */
    .rectangle3 {
        width: 216px;
        height: 1024px;
        background-color: #78BABE;
        position: absolute;
        top: 0px;
        left: 0px;
    }

        /* Style the links in the rectangle */
        .rectangle3 a {
            margin-top:10px;
            display: block;
            text-align: center;
            padding: 10px;
            font-size: 20px;
            color: #000000;
            text-decoration: none;
        }

        .rectangle3 a:hover{
            background:#fff;
            color:#000;
        }
    /* Style the table */
    .table, .card {
        width: calc(100% - 382px);
        margin-top: 3%;
        border-collapse: collapse;
        margin-left: 5%;
        left: 216px;
    }

        .table th,
        .table td
        .table tr {
            padding: 7px;
            text-align: left;
            width: calc(100% - 216px);
            left: 216px;
        }

        .table th {
            background-color: #BFD8EE;
            color: #000000;
        }

            .table td.forum-id,
            .table th.forum-id {
                width: 5%;
            }

            .table td.id,
            .table th.id {
                width: 5%;
            }

            .table td.category,
            .table th.category {
                width: 10%;
            }

            .table td.title,
            .table th.title {
                width: 20%;
            }

            .table td.content,
            .table th.content {
                width: 30%;
            }

            .table td.forum-created,
            .table th.forum-created {
                width: 10%;
            }

            .table td.actions,
            .table th.actions {
                width: 10%;
                text-align: center;
            }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        font-size: 16px;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
    }

    .container {
        width: calc(100%-216px);
        display: flex;
        justify-content: center;
    }

    
        .forumList{
            background-color: #ffffff;
            color:#000000;
        }
        .forumList:Hover{
            background-color:aliceblue;
            color:black;
        }

    .searchBox {
        display: inline-flex;
        width: 300px;
        margin-top: 7.5%;
        margin-left: 25%;
        border-radius: 27px;
        height: 40px;
    }

        .searchBox input[type="text"] {
            display: inline-block;
            width: 70%;
            border: 1px solid #ccc;
            padding: 5px;
            font-size: 16px;
            border-radius: 5px;
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            place-holder: Search for Keyword;
        }

        .searchBox input[type="submit"] {
            display: inline-block;
            width: 25%;
            margin-left: 5px;
            padding: 5px;
            font-size: 16px;
            border-radius: 5px;
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
        }

    .createForum {
        margin-top: 10px;
        margin-left: 25%;
        left: 216px;
        width: fit-content;
    }


</style>
<body>
    <div class="discussionList">
            <div class="navbar">
            <span></span><span></span><span></span>
            
                <a class ="forumList" href="@Url.Action("ForumList", "User")">Forums</a>
                <a class="polls">Polls</a>
                <a class="contactUs">Contact Us</a>
                <a asp-action="Login" asp-controller="Login" class="LogOut">Log Out</a>
            </div>

            <div class="rectangle3">
                <img src="~/css/logo.png" class="logo" />
                <p class="ConneKt">ConneKt</p>
            @{
                string Email = Context.HttpContext.Session.GetString("UserEmail");
                int userId = Context.HttpContext.Session.GetInt32("UserId") ?? 0;

            }
            <a href="@Url.Action("DiscussionList", "User", new { Id = Context.HttpContext.Session.GetString("UserEmail")})" class="myForums">
                My Forums
            </a>

                <a class="myPolls">My Polls</a>
                <a class="myMemory">My Memories</a>
            <a href="@Url.Action("EditProfile","Login", new {Id = userId} )" class="editProfile">Edit Profile</a>
            <a href="@Url.Action("DeleteProfile","Login", new {Id = userId} )" class="editProfile">Delete Profile</a>
                <a class="newAccount" asp-action="SignUp" asp-controller="Login"> New Account</a>
            </div>

            @using (Html.BeginForm())
            {
                <p class="searchBox">
                    @Html.TextBox("searchString")<br />
                    <br>
                    <input type="submit" class="btn btn-outline-success"  value="Search" />
                </p>
            }
        <a asp-action="Create" class="createForum btn btn-outline-primary">Create New Forum</a>
        <table class="table">
            
            <tbody>

                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <div class="card">
                                <div class="card-body" style="font-family:Garamond; font-size:20px;">
                                    <h5 class="card-title" style="font-weight:700">@Html.DisplayFor(modelItem => item.title)</h5>
                                    <p class="card-text">
                                        <small class="text-muted">@Html.DisplayFor(modelItem => item.Email) | @Html.DisplayFor(modelItem => item.forumCreated)</small>
                                    </p>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.content)</p>
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text">
                                            <small class="text-muted">@Html.DisplayFor(modelItem => item.category)</small>
                                        </p>
                                        <div class="btn-group">
                                            <a class="btn btn-outline-secondary" href="@Url.ActionLink("AddReply", "User", new {id = item.forumId})">Look Into</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
